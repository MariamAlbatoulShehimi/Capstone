@model HomeVM

<!-- Hero Section -->
<section class="hero bg-primary text-white text-center py-5">
    <h1>Welcome to Zad</h1>
    <p>Your go-to platform for essential resources and donations</p>
</section>

<!-- Category Filter -->
<section class="container my-4">
    <div class="d-flex justify-content-center gap-3">
        <a asp-action="Index" asp-route-categoryId="0" class="btn btn-outline-primary">All</a>
        @foreach (var category in Model.Categories)
        {
            <a asp-action="Index" asp-route-categoryId="@category.Id" class="btn btn-outline-primary">
                @category.Name
            </a>
        }
    </div>
</section>

<!-- Product List -->
<div class="row pb-3">
    @foreach (var product in Model.Products)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card shadow-sm h-100">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-center text-uppercase">@product.Name</h5>
                    <p class="card-text text-center">@product.Condition</p>
                    <p class="text-center text-muted">
                        <del>@product.ListPrice.ToString("c")</del>
                    </p>
                    <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary mt-auto">View Details</a>
                </div>
            </div>
        </div>
    }
</div>



                        